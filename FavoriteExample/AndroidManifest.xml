<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tarks.favorite.example"
    android:versionCode="2"
    android:versionName="@string/ver" >
    
     <uses-feature android:name="android.hardware.camera"></uses-feature>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- GCM 관련 퍼미션 -->
    <permission
        android:name="com.tarks.favorite.example.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.tarks.favorite.example.permission.C2D_MESSAGE" />
    <!-- GCM 받기 -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- GCM을 받으려면 구글 계정 필요 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- 메시지 받을 때 wake up 하기 위해 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="com.tarks.favorite.example.ModApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/Theme.Favorite" >

        <!-- 알림 서비스(시작) -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.tarks.favorite.example" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMIntentService" />
        <!-- 알림 서비스(끝) -->
        <activity
            android:name="com.tarks.favorite.example.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main"
            android:icon="@drawable/ic_launcher_simple"
            android:screenOrientation="portrait" />
         <activity
            android:name="com.tarks.favorite.example.info"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/app_info" 
           />
         

            <activity
            android:name=".setting"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/setting" 
           />
             <activity
            android:name=".GalleryView"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/photo" 
           />
               <activity
            android:name="com.tarks.favorite.example.page.ProfileActivity"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/app_name" 
              android:theme="@style/AppTheme.TranslucentActionBar" 
           />
               
                          <activity
            android:name="com.tarks.favorite.example.page.ProfileEdit"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/edit_profile" 
           />
                        <activity
            android:name=".page.ProfileInfo"
            android:icon="@drawable/ic_launcher_simple"
            android:label="@string/user_info" />
                        
                        
                                           <activity
            android:name=".page.privacy_category"
            android:icon="@drawable/ic_launcher_simple"
            android:label="@string/privacy_content" />
               
               
                     <activity
            android:name="com.tarks.favorite.example.page.page_create"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/create_page" 
           />
                     
                             <activity
            android:name="com.tarks.favorite.example.page.document_write"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/write" 
           />
                     
                     
                     <activity
            android:name="com.tarks.favorite.example.page.document_read"
            android:icon="@drawable/ic_launcher_simple"
             android:label="@string/app_name" 
           />
        
         <activity
            android:name=".document_read"
            android:icon="@drawable/ic_launcher_simple"
            android:label="@string/app_info" />
        <activity
            android:name=".start.welcome"
             android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar" />
        <activity
            android:name="com.tarks.favorite.example.tarks_account_login"
            android:icon="@drawable/tarks_white"
            android:label="@string/tarks_account"
            android:theme="@style/Theme.Sherlock" />
        <activity
            android:name=".start.join"
            android:icon="@drawable/ic_launcher_simple"
            android:label="@string/sign_up" />
        
            <activity
            android:name=".like.favorite_category"
            android:icon="@drawable/ic_launcher_simple"
            android:theme="@style/Theme.Favorite.Light.Dialog"
            android:label="@string/add_favorite" />
            
        <activity
            android:name=".CropManager"
            android:icon="@drawable/ic_launcher_simple"
            android:label="@string/cut_image" />
    </application>

</manifest>